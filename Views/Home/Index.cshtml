@{
    ViewData["Title"] = "Home Page";
}
@model User
<div class="text-center">
    <h4 class="display-4">Welcome to the Dojo Activaity Center</h4><br>
    <div class="row">
        <div class="col-md-6">
            <h4 class="display-4">Register</h4><br>
            <form asp-action="Register" asp-controller="Home" method="POST">
                <div>
                    <label asp-for="FirstName"></label>
                    <input asp-for="FirstName" /><br />
                    <span style="color: red; font-size: 8pt;" asp-validation-for="FirstName"></span>
                </div>
                <div>
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" /><br />
                    <span style="color: red; font-size: 8pt;" asp-validation-for="LastName"></span>
                </div>
                <div>
                    <label asp-for="Email"></label>
                    <input asp-for="Email" /><br />
                    <span style="color: red; font-size: 8pt;" asp-validation-for="Email"></span>
                </div>
                <div>
                    <label asp-for="Password"></label>
                    <input asp-for="Password" /><br />
                    <span style="color: red; font-size: 8pt;" asp-validation-for="Password"></span>
                </div>
                <div>
                    <label asp-for="Confirm"></label>
                    <input asp-for="Confirm" /><br />
                    <span style="color: red; font-size: 8pt;" asp-validation-for="Confirm"></span>
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>
        <div class="col-md-6">
            <h4 class="display-4">Login</h4><br>
            <partial name="_Login.cshtml"></partial>
        </div>
    </div>
</div>

